<div class="author">
    <h1 class="author__heading">Hi, I am Jack.</h1>
    <p class="author__body">Full Stack Developer and Robotics developer</p>
</div>

<img src="/img/hero-image.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="article__heading"> Lastest Posts </h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
           <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"> <%= post.createdAt.toDateString() %></span>
            </a> 
        </li>
        <% }) %>
    </ul>

    <% if (typeof nextPage !== 'undefined' && nextPage > 1) { %>
        <a href="/?page=<%= nextPage %>" class="pagination"> < View Older Posts</a>
    <% } %>

 

</section>